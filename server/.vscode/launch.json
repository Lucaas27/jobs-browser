{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug index.ts",
            "program": "${workspaceFolder}/dist/src/index.js",
            "sourceMaps": true,
            "restart": true,
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}